<?include ..\Variables.wxi ?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
	<Fragment>
    <UI>
      <Dialog Id="ConfirmationDlg" Width="370" Height="270" Title="$(var.ProductName) $(var.ProductVersion) Setup">

        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="TopBannerBitmap" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="1" />
        
        <Control Id="Question" Type="Text" X="15" Y="80" Width="340" Height="150" Text="This installation will require Advanced Single Sign-On to be set-up for the customer. Do you have the customers Organisation Reference, Super Admins Email and Advanced Id?" />
		  
		  <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="Yes"></Control>
		  <Control Id="Back" Type="PushButton" X="304" Y="243" Width="56" Height="17" Text="No">
			  <Publish Event="EndDialog" Value="Exit" />
		  </Control>
      </Dialog>
    </UI>
	</Fragment>
</Wix>
